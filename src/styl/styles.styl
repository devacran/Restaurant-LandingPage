@import './globals.styl'

.header
  height: $navHeight
  position: absolute
  top: 0
  right: 0
  left: 0
  max-width: 1200px
  margin: 0 auto

.navbar
  ul
    display: flex
    width: 60%
    padding: 0
    margin-left: 40%;
    justify-content: space-between
    align-items: center
    cursor: pointer

.main-section
  height: 100vh
  max-height: 800px
  background-image: url('../assets/mainSection.png')
  background-size: cover;
  background-color: gray
  border: 1px solid transparent

.about-us-section
  background: rgb(2,0,36);
  background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(234,234,255,1) 0%, rgba(255,255,255,1) 100%);
  background-image: url('../assets/aboutSection.jpg')
  background-size: cover;



.order-section
  background: rgb(2,0,36);
  background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(234,234,255,1) 0%, rgba(255,255,255,1) 100%);
  &__nav
    ul
      display: flex
      justify-content: space-between
      border-bottom: 2px solid #c5c5c5
    li
      display: flex
      justify-content: center
      align-items: center
    a
      padding: 10px
      cursor: pointer
      margin-bottom: -2px
      border-bottom: 2px solid transparent
.book-section
  background: rgb(2,0,36);
  background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(234,234,255,1) 0%, rgba(255,255,255,1) 100%);
  background-color: yellow
  &__schedule
    display: flex
    justify-content: space-between
  &__title
    title(special)
  &__dish
    img
      width: 100%
      object-fit: cover

.catalog
  overflow: hidden
  display: -webkit-box
  width: max-content
  &__wrapper
    overflow: hidden
  &__container
    display: grid
    grid-template-columns: repeat(4, 1fr)
    grid-auto-flow: column
    grid-template-rows: 1fr 1fr
    grid-gap: 20px
    padding-bottom: 100px
    transition: 1s


.testimonial-section
  background: rgb(2,0,36);
  background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(234,234,255,1) 0%, rgba(255,255,255,1) 100%);

.testimonial-slider
  display: grid
  place-items: center
  &__title
    title(standard)
  &__subtitle
    font-size: 18px
    color: gray
    margin-bottom: 1em
  &__rating
    rating()

.slider
  position: relative
  width: 100%
  img
    width: 100%
    height: 100%
  &__container
    overflow: hidden
  &__content
    transition: 1s
    display: -webkit-box
  &__control
    position: absolute
    top: 50%
    height: 50px
    width: 50px
    opacity: .4
    z-index: 1
  &__control--right
    right: -100px
  &__control--left
    left: -100px
