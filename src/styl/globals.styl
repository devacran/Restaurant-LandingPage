// -----$variables----
$navHeight = 60px
h1
  font-size: 50px
h2
  font-size: 18px
ul
  padding: 0
  list-style: none


  // -----$mixins----
right-radius(n)
  border-top-right-radius: n
  border-bottom-right-radius: n
left-radius(n)
  border-top-left-radius: n
  border-bottom-left-radius: n
subtitle()
  font-size: 26px
rating()
  title(special)
  color: yellow
title(type)
  font-size: 32px
  if type=='standard'
    font-family: sans-serif
  if type=='special'
    font-family: serif
    font-weight: bold
  // -----$globals----
*
  box-sizing: border-box

.section
  &__container
    padding-top: $navHeight
    max-width: 1200px
    margin: 0 auto
  &__content
    display: grid
    grid-row-gap: 30px
    max-width: 600px
    padding-bottom: 100px
    margin: 0 auto
    text-align: center
    &--right
      text-align: left
      margin-right: 50%
    &--left
      text-align: left
      margin-left: 50%

// ----$Molecules---
.button
  display: flex
  align-items: center
  justify-content: center
  width: 120px
  height: 40px
  background-color: coral
  border-radius: 8px
  color: white
  &--submit
    height: 100%
    max-height: 100px
    border-radius: 0
    right-radius(8px)
  &--download
    position: relative;
    height: 40px
    padding-right: 2em
    &::after
      position: absolute;
      top: 0
      bottom: 010px 0 10px
      right: 0
      display: block
      width: 2em
      height: 100%
      line-height: 38px
      text-align: center
      content: '>'
      background-color: orange
      right-radius(8px)

.searchBox
  display: flex
  width: 100%
  height: 40px
  &__icon
    background-color: white
    padding-left: 10px
    line-height: 3em
    left-radius(8px)
  input
    width: fill-available
    padding: 5px
    border: none
    outline: none

.stats-label
  display: flex
  justify-content: space-between
  width: 50%;
  div
    display: flex
    align-items: center
.slider__indicator

.product
  position: absolute;
  top: 0
  left: 0
  right: 0
  bottom: 0
  display: grid
  place-items: center
  text-align: center;
  background-color: gray
  &__wrapper
    position: relative
    width: 100%
    height: 300px
  &__image
    width: 100%
    height: 100%
    object-fit: cover
  &__price
    display: block
    title(special)
    color: white
  &__rating
    display: block
    rating()
  &__name
    display: block
    margin-bottom: 1em
    title(standard)
    color: white
